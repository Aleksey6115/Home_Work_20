@model ContactLibrary.Contact

@{
}

@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}


<!DOCTYPE html>

<html>

    <head>
        <title>Изменить контакт</title>
    </head>

    <body>
        <h3>Изменить данные:</h3>

        <form method="post" asp-controller="Home" asp-action="EditContact" asp-route-Id="@Model.Id">

            <table>

                <tr>
                    <td><label asp-for=LastName>Фамилия:</label></td>
                    <td><input type="text" asp-for=LastName value="@Model.LastName" /></td>
                    <td><span asp-validation-for=LastName></span></td>
                </tr>

                <tr>
                    <td><label asp-for=FirstName>Имя:</label></td>
                    <td><input type="text" asp-for=FirstName value="@Model.FirstName"/></td>
                    <td><span asp-validation-for=FirstName></span></td>
                </tr>

                <tr>
                    <td><label asp-for=ContactPhone>Контактный телефон:</label></td>
                    <td><input type="text" asp-for=ContactPhone value="@Model.ContactPhone" /></td>
                    <td><span asp-validation-for=ContactPhone></span></td>
                </tr>

                <tr>
                    <td><label asp-for=Address>Email адрес:</label></td>
                    <td><input type="text" asp-for=Address value="@Model.Address"/></td>
                    <td><span asp-validation-for=Address></span></td>
                </tr>

                <tr>
                    <td><label asp-for=Description></label></td>
                    <td><input type="text" asp-for=Description value="@Model.Description"/></td>
                </tr>
            </table>

            <p></p>

            <p>
               <input type="submit" value="Сохранить изменения" />
               <input type="reset" value="Сбросить значения" />
            </p>

        </form>
    </body>

</html>

